
@{
    ViewData["Title"] = "Balloon";
}
@section Scripts {
    <script type="text/javascript" src="/js/balloon.js"></script>


}

<h1>Balloon</h1>
<hr/>

<div class="container">
    <h1 class="animated" id="msgBDay">Happy Birthday</h1>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" />
            </div>
            <div class="form-group">
                <label for="birthDate">Birthdate</label>
                <input type="text" class="form-control" id="birthDate" />
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Select your balloons</h5>
                    <div class="form-group form-check">
                        <input type="checkbox" id="Black" class="form-check-input blnCheck" />
                        <label class="form-check-label labelColor" data-color="black">Black balloon</label>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" id="Blue" class="form-check-input blnCheck" />
                        <label class="form-check-label labelColor" data-color="blue">Blue balloon</label>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" id="Red" class="form-check-input blnCheck" />
                        <label class="form-check-label labelColor" data-color="red">Red balloon</label>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" id="checkAll" class="form-check-input blnCheckAll" />
                        <label class="form-check-label">Select All</label>
                    </div>



                </div>
            </div>
            <div class="text-center">
                <button type="button" id="bDaySubmit" class="btn btn-outline-secondary">Submit</button>
            </div>
            <div class="toast text-center" id="toastBDay">
                <div class="toast-header">
                    <div class="text-left mr-1">
                        <button type="button" class="btnCloseToast">X</button>
                    </div>
                    <div class="text-center mx-1">
                        <h3>Alert</h3>
                    </div>
                </div>
                <div class="toast-body text-center">
                    <h4>You must select a balloon color!</h4>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <img src="~/img/black.png" id="imgBlack" style="visibility: hidden" />
            <img src="~/img/blue.png" id="imgBlue" style="visibility:hidden" />
            <img src="~/img/red.png" id="imgRed" style="visibility:hidden" />
        </div>
    </div>


</div>

