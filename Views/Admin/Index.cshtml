@using Northwind.Models
@model IEnumerable<AppUser>

<h1>Index</h1>
<div asp-validation-summary="All" class="text-danger"></div>

<table class="table table-sm table-bordered table-striped">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th colspan="2">Options</th>

    </tr>
    @if (!Model.Any()) //or Model.Count() == 0 but count is slower because it checks the ienumerable. .any checks iqueryable which is faster
    {
        <tr>
            <td colspan ="5" class="text-center">No User Accounts</td>
        </tr>
    }
    else
    {
        @foreach (AppUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td><form asp-action="Delete" asp-route-id="@user.Id" method="post"><button type="submit" class="btn btn-danger">Delete</button></form></td>
                <td><form asp-action="Edit" asp-route-id="@user.Id" method="post"><button type="submit" class="btn btn-danger">Edit</button></form></td>
                

            </tr>
        }
    }
    
</table>

<a class="btn btn-primary" asp-action="Create">Create</a>

